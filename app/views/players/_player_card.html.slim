.card.player_card onclick="redirect_player_show(#{player.id})"
  .row
    .col-3.d-flex.align-items-center
      - if player.headshot.attached?
        = image_tag player.headshot.variant(resize: "100x100"), class: "fill"
    .col-6
      h3 = player.full_name
      h6 = player.country.name
    .col-3.d-flex.align-items-center
      - if player.country.flag.attached?
        = image_tag player.country.flag.variant(resize: "100x100"), class: "fill"

javascript:
  function redirect_player_show(id) {
    window.location.href = "/players/" + id
  }